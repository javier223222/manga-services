generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Manga {
  id          String     @id @default(uuid())
  title       String 
  description String
  authorId    String
  genre       String
  coverUrl    String     
  createdAt   DateTime   @default(now())
  tags        MangaTag[]
  chapters    Chapter[]
}

model Chapter {
  id          String   @id @default(uuid())
  mangaId     String
  number      Int
  title       String
  pdfUrl      String   
  public   Boolean

  releaseDate DateTime


  manga       Manga    @relation(fields: [mangaId], references: [id])
  chapterAccess ChapterAccess[]
  
}

model Tag {
  id   String @id @default(uuid())
  name String @unique
  mangas MangaTag[]
}

model MangaTag {
  id      String @id @default(uuid())
  manga   Manga  @relation(fields: [mangaId], references: [id])
  mangaId String
  tag     Tag    @relation(fields: [tagId], references: [id])
  tagId   String
}

model ChapterAccess {
  id        String   @id @default(uuid())
  userId    String
  chapterId String
  paymentId String  // ID de la transacci√≥n o comprobante

  chapter   Chapter @relation(fields: [chapterId], references: [id])
}








